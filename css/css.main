.container {  display: grid;
  grid-template-columns: 0.7fr 2fr .7fr;
  grid-template-rows: 0.5fr 0.9fr 2fr .8fr;
  gap: 0px 0px;
  grid-auto-flow: row;
}

.nav { grid-area: 1 / 1 / 2 / 4; }

.main { grid-area: 2 / 1 / 3 / 4; }

.side1 { grid-area: 3 / 1 / 4 / 2; }

.side2 { grid-area: 3 / 3 / 4 / 4; }

.content { grid-area: 3 / 1 / 4 / 3; }

.footer { grid-area: 4 / 1 / 5 / 4; }
